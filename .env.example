# FastAPI settings
PROJECT_NAME=AI Handwritten Answer Evaluation Platform
VERSION=0.1.0
API_V1_STR=/api/v1
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/ai_handwriting
SYNC_DATABASE_URL=postgresql://postgres:postgres@db:5432/ai_handwriting

# Redis / Celery
REDIS_URL=redis://redis:6379/0

# Supabase / Storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role
SUPABASE_BUCKET=answer-sheets

# JWT secrets
JWT_SECRET_KEY=replace-with-strong-secret
JWT_REFRESH_SECRET_KEY=replace-with-refresh-secret
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
JWT_ALGORITHM=HS256

# AI models
OCR_MODEL_EN=microsoft/trocr-base-handwritten
OCR_MODEL_HI=microsoft/trocr-base-handwritten-hi
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/all-MiniLM-L6-v2
KW_WEIGHT=0.5
SEM_WEIGHT=0.5

# External services
CLOUD_OCR_KEY=
ACTIONS_DEPLOY_API_KEY=
